{
  "$schema": "./node_modules/release-it/schema/release-it.json",
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "requireCleanWorkingDir": true,
    "commitMessage": "release: v${version}",
    "tagName": "v${version}",
    "requireUpstream": true
  },
  "github": {
    "release": true,
    "preRelease": false
  },
  "npm": false
}
