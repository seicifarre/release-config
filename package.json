{
  "name": "release-config",
  "version": "1.0.6-dev.0",
  "description": "Automatizaci√≥n de releases para entorno con ramas master y develop usando release-it",
  "type": "module",
  "scripts": {
    "release": "node scripts/release.js",
    "release:master": "dotenv -- release-it --ci --no-increment --no-git.changelog",
    "release:dev": "dotenv -- release-it --ci --no-increment --preRelease",
    "release:prod": "node --loader ts-node/esm scripts/run-production-release.ts",
    "changelog": "node scripts/generate-changelog.js"
  },
  "dependencies": {
    "dotenv": "16.5.0"
  },
  "devDependencies": {
    "@release-it/bumper": "7.0.5",
    "conventional-changelog-cli": "5.0.0",
    "conventional-recommended-bump": "11.0.0",
    "dotenv-cli": "8.0.0",
    "release-it": "19.0.1",
    "semver": "7.7.1",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  }
}
